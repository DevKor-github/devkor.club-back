{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@common/*": ["./src/common/*"],
      "@applications/*": ["./src/applications/*"],
      "@presentations/*": ["./src/presentations/*"],
      "@domains/*": ["./src/domains/*"],
      "@/*": ["./src/*"]
    }
  }
}
